{
  "name": "Python 3.14 with uv",
  "image": "python:3.14-slim",

  // SSH and Git integration
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": false
    }
  },

  // Forward SSH agent and GPG from host
  "mounts": [
    // Persist bash history
    "source=devcontainer-bashhistory,target=/commandhistory,type=volume",
    // Persist uv cache for faster rebuilds
    "source=devcontainer-uv-cache,target=/root/.cache/uv,type=volume"
  ],

  // Environment variables
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/root/.local/bin",
    // uv settings for container compatibility
    "UV_LINK_MODE": "copy",
    // Use the workspace .venv
    "VIRTUAL_ENV": "/workspaces/${localWorkspaceFolderBasename}/.venv",
    // Activate venv in PATH
    "UV_PROJECT_ENVIRONMENT": "/workspaces/${localWorkspaceFolderBasename}/.venv"
  },

  // Run setup script after container creation
  "postCreateCommand": "bash .devcontainer/postCreateCommand.sh",

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        // Python interpreter from uv venv
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,

        // Ruff as default formatter
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
          }
        },

        // Testing with pytest
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,

        // Terminal settings
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // Container user settings
  "containerEnv": {
    // Bash history file location
    "HISTFILE": "/commandhistory/.bash_history",
    "PROMPT_COMMAND": "history -a"
  }
}
